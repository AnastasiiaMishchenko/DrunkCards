<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anastasiia.drunkcards.Kings">

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="499dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="6dp">

        <Button
            android:id="@+id/kings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text="Back" />

        <Button
            android:id="@+id/kings_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text="Rules" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="499dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="6dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            app:srcCompat="@android:drawable/editbox_dropdown_light_frame" />

        <Button
            android:id="@+id/get_card_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get card" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
