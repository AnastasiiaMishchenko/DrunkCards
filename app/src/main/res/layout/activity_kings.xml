<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anastasiia.drunkcards.Kings">

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="53dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/kings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text="Back" />

        <Button
            android:id="@+id/kings_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text="Rules" />

    </LinearLayout>

    <ImageView
        android:id="@+id/cardView"
        android:layout_width="349dp"
        android:layout_height="210dp"
        android:layout_marginRight="17dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/get_card_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get card!"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="447dp" />

</android.support.constraint.ConstraintLayout>
